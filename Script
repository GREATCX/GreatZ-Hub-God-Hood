local timeleft = 1 -- (for me example: 500)
local kickmessage = "UserBan lifetime"  -- ( for me example: Time has ran out. )

function KickAllPlayer()
      for i, v in pairs(game:GetService("Players"):GetPlayers()) do
             v:Kick(kickmessage)
      end
end

while true do
wait(1) 
      -- Perform checking time left.
        if timeleft > 0 then
               -- Time is not ran out, perform subtract.
                timeleft -= 1
else
        -- call kick all player function:
        KickAllPlayer()
        end
end
